#!/usr/bin/env bash

# This script requires Bash v4+. Make sure it's installed before runing it.
# MacOS still includes v3.2, so it should be updated by running
# brew install bash

if [[ $# -lt 2 ]]; then
  echo "Use backup <name> <target 1> <target 2> ... <target n>"
  echo "Where name is one of: archives, backups, documents, literature, photos, videos"
  echo "and target is: gdrive, b2."
  exit 2
fi

declare -A sources
declare -A targets

if [[ "$OSTYPE" == "darwin"* ]]; then
  excludelist="/Users/arg/.config/rclone/excludelist.txt"
  sources["documents"]="/Users/arg/Documents"
else
  excludelist="/home/arg/.config/rclone/excludelist.txt"
  sources["archives"]="/archive/archives"
  sources["backups"]="/archive/backups"
  sources["documents"]="/archive/documents"
  sources["literature"]="/archive/literature"
  sources["photos"]="/archive/photos"
  sources["videos"]="/archive/videos"
fi

targets["archives","gdrive"]="gdrive-crypt"
targets["archives","b2"]="b2-crypt"

targets["backups","gdrive"]="gdrive-crypt"
targets["backups","b2"]="b2-crypt"

targets["documents","gdrive"]="gdrive"
targets["documents","b2"]="b2-crypt"
targets["documents","polaris"]="smb-polaris"

targets["literature","gdrive"]="gdrive"
targets["literature","b2"]="b2-crypt"

targets["photos","gdrive"]="gdrive"
targets["photos","b2"]="b2-crypt"

targets["videos","gdrive"]="gdrive-crypt"
targets["videos","b2"]="b2-crypt"

name=${1,,}

for target in "${@:2}"; do
  rclone sync \
    --fast-list \
    --progress \
    --log-level INFO \
    --log-file=/var/log/rclone/rclone.log \
    --exclude-from $excludelist ${sources[$name]} ${targets[$name,$target]}:$name
done
